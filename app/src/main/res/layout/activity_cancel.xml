<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.huijiayou.huijiayou.activity.CancelActivity">
    <include layout="@layout/common_title"/>
    <Button
        android:id="@+id/bt_activityCancle_out"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="安全退出"
        android:textSize="17dp"
        android:textColor="#FF7320"
        android:background="@color/white"
        />
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_activityCancel_telephone"
        android:layout_marginTop="52dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="手机号"
        android:textSize="13dp"
        android:textColor="#51586A"
        />
        <TextView
            android:id="@+id/tv_activityCancle_telephone"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="15033891235"
            android:textSize="13dp"
            android:textColor="#999999"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_activityCancel_name"
        android:layout_below="@id/rl_activityCancel_telephone"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="微信昵称"
            android:textSize="13dp"
            android:textColor="#51586A"
            />
        <TextView
            android:id="@+id/tv_activityCancle_name"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="袋鼠"
            android:textSize="13dp"
            android:textColor="#999999"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_activityCancel_version"
        android:layout_below="@id/rl_activityCancel_name"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="版本号"
            android:textSize="13dp"
            android:textColor="#51586A"
            />
        <TextView
            android:drawableRight="@mipmap/ic_pay_arrow_n"
            android:id="@+id/tv_activityCancle_version"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1.0"
            android:textSize="13dp"
            android:textColor="#999999"
            />
    </RelativeLayout>
    </RelativeLayout>