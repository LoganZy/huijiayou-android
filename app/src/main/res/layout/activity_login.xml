<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wanglibao.huijiayou.activity.LoginActivity">

    <include layout="@layout/common_title"/>
    <ImageView
        android:id="@+id/img_activity_login_phone_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_login_logo"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/ll_activity_login_phone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/img_activity_login_phone_logo"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_login_account"/>
        <EditText
            android:id="@+id/edit_activityLogin_phone"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:inputType="phone"
            android:background="@drawable/line_login_selector"
            android:hint="请输入手机号码"
            android:maxLines="1" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_activity_login_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll_activity_login_phone"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_login_password"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edit_activityLogin_phoneCode"
                android:layout_height="wrap_content"
                android:background="@drawable/line_login_selector"
                android:hint="请输入手机验证码"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/tv_activityLogin_sendPhoneCode"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="#F3B93E"
                android:text="获取验证码"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_activity_login_invit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_below="@id/ll_activity_login_sms"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_login_invitation"/>
        <EditText
            android:id="@+id/edit_activityLogin_invit"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/line_login_selector"
            android:hint="若无邀请码请忽略"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_activityLogin_login"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_activity_login_invit"
        android:background="@drawable/round_button"
        android:text="登录/注册"/>
    <LinearLayout
        android:id="@+id/ll_activity_line"
        android:layout_below="@id/btn_activityLogin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#D6D7D7"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关联社交账户快速登录"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="#D6D7D7"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/WXLogin"
        android:layout_below="@id/ll_activity_line"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_login_wechat"
        />
    <TextView
        android:id="@+id/text_weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/WXLogin"
        android:layout_marginTop="2dp"
        android:layout_centerHorizontal="true"
        android:text="微信登录"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_weixin"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ic_login_pattern"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@mipmap/ic_login_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册登录表示您已同意"/>

        <TextView
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openAgreement"
            android:text="《会加油注册协议》"/>

    </LinearLayout>


</RelativeLayout>
