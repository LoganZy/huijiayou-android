<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#F5F5F5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="14dp"
        android:background="@color/white"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_marginLeft="20dp"
        android:textSize="13dp"
        android:textColor="#51586A"
        android:id="@+id/tv_activityRecord_company2"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国石化 充值套餐"/>

        <TextView
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="3 / 6"
            android:textSize="13dp"
            android:background="@drawable/ic_recording"
            android:id="@+id/tv_activityRecord_CompletionRate2" />
        <TextView
            android:paddingRight="20dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:drawableRight="@mipmap/ic_pay_arrow_n"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <LinearLayout
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="13dp"
            android:textColor="#999999"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="卡号"/>
        <TextView
            android:textSize="13dp"
            android:textColor="#999999"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="套餐类型"/>

        <TextView
            android:textSize="13dp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="支付金额"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_activityRecord_cardNumber2"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="#51586A"
            android:layout_height="wrap_content"
            android:text="11999999"/>
        <TextView
            android:id="@+id/tv_activityRecord_cardtype2"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#51586A"
            android:text="6个月"/>

        <TextView
            android:id="@+id/tv_activityRecord_payNumber"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="#51586A"
            android:layout_height="wrap_content"
            android:text="53000"/>

    </LinearLayout>


</LinearLayout>
