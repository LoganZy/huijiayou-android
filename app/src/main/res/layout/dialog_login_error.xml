<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/shape_dialog_login_error_bg">

        <ImageButton
            android:id="@+id/imgBtn_dialogLoginError_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:padding="18dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_pay_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_popup"
            android:layout_centerHorizontal="true"
            android:text="登录超时,请重新登录"
            android:gravity="center"
            android:textColor="@color/textColor_51586A"
            android:drawablePadding="30dp"
            android:layout_marginTop="45dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/orange_FF7320"
            android:layout_above="@+id/btn_dialogLoginError_readLogin"/>

        <Button
            android:id="@+id/btn_dialogLoginError_readLogin"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="重新登录"
            android:layout_centerHorizontal="true"
            android:textSize="17dp"
            android:background="@color/transparent"
            android:textColor="@color/orange_FF7320"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>
</RelativeLayout>