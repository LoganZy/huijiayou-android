<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.huijiayou.huijiayou.activity.CloseDealActivity">
    <include layout="@layout/common_title"/>
    <LinearLayout
        android:gravity="center"
        android:background="#CCCCCC"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_details_gas_n"/>
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="交易关闭"
            android:textSize="16dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:text="余额不足，支付失败"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/img_activityClose_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@mipmap/ic_details_cnpc" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_activityClose_cardNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01000000000000000"
                android:textColor="#666666"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_activityClose_username"
                android:textColor="#666666"
                android:textSize="14dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"/>

        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_activityClose_Deail"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_pay_frame"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="充值金额" />

                <TextView
                    android:textColor="#2A2A2A"
                    android:id="@+id/tv_activityClose_befor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ic_details_recharge"
                    android:text="3000"
                    android:textSize="18dp" />

                <TextView
                    android:textColor="#666666"
                    android:textSize="14dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="实际支付" />

                <TextView
                    android:id="@+id/tv_activityClose_after"
                    android:textColor="#2A2A2A"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/ic_details_recharge"
                    android:text="3000"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="中石化6月加油套餐"
                android:textColor="#666666"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_activityClose_wire"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rl_activityClose_Deail"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="#F5F5F5" />

        <LinearLayout
            android:id="@+id/ll_activityClose_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_activityClose_wire"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_activityClose_ordername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="12222222222"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_activityClose_code"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_activityClose_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="2018-06-12"
                android:textSize="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_activityClose_pay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:text="重新购买"
            android:textColor="#FF7320"
            android:textSize="17dp" />

    </RelativeLayout>


</LinearLayout>