<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_dialogPaymentActivityOilCar_view"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:background="@color/white"
            android:padding="16dp">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/btn_dialogPaymentActivityOilCar_addOilCard"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_activity_oil_card_add"
            android:gravity="center"
            android:text="+  新增油卡"
            android:textSize="13dp"
            android:textColor="@color/orange_FFA302" />

        <Button
            android:id="@+id/btn_dialogPaymentActivityOilCar_cancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="取消"
            android:gravity="center"
            android:background="@color/white"/>

    </LinearLayout>



</RelativeLayout>
