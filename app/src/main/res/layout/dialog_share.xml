<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/ll_dialog_share_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_dialog_share_cancel"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/tv_dialog_share_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_invite_wechat"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="微信" />

        <TextView
            android:id="@+id/tv_dialog_share_wxcircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_invite_circle"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="朋友圈" />

        <TextView
            android:id="@+id/tv_dialog_share_mianduimian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/ic_invite_qr_code_hqr_code_h5_qr_code"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="面对面邀请" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_dialog_share_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/umeng_socialize_qq"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="QQ" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_dialog_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:text="取消"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
