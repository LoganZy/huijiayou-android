<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context="com.huijiayou.huijiayou.activity.InvitationShareActivity">

    <include layout="@layout/common_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@mipmap/ic_navbar_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgView_activityInvitationShare_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_activityInvitationShare_share"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:id="@+id/ll_activityInvitationShare_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/bg_color"
            android:weightSum="4"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_activityInvitationShare_wechat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_invite_wechat"
                android:gravity="center"
                android:text="微信"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_activityInvitationShare_wxcircle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_invite_circle"
                android:gravity="center"
                android:text="朋友圈"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_activityInvitationShare_qq"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/ic_invite_qq"
                android:gravity="center"
                android:text="QQ"
                android:textColor="@color/black" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
