<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imgView_dialogHomeFristStart_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_home_popup"
        android:layout_marginRight="10dp"
        android:background="@color/transparent"/>

    <Button
        android:id="@+id/btn_dialogHomeFristStart_get"
        android:layout_width="240dp"
        android:layout_height="52dp"
        android:textColor="@color/white"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_dialog_home_frist_start_btn"
        android:layout_below="@+id/imgView_dialogHomeFristStart_icon"
        android:textSize="23dp"
        android:text="马上领取"/>

</LinearLayout>
