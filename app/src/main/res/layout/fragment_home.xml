<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:weightSum="100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_fragmentHome_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#CBCAC7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_commonTitle_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:textColor="@color/title_color"
                android:textSize="17dp"
                android:text="会加油" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/title_color"
                android:drawableRight="@mipmap/ic_navbar_arrow_up"
                android:text="中国石油 | 全国"/>

            <ImageButton
                android:id="@+id/imgBtn_fragmentHome_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/slector_homefragment_news"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@mipmap/ic_navbar_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="64"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指针拨动 选择充值月数"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/ic_home_tag_left"
            android:drawableRight="@mipmap/ic_home_tag_right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#999999"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="26"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入或选择充值金额"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@mipmap/ic_home_tag_left"
            android:drawableRight="@mipmap/ic_home_tag_right"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#999999"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgBtn_fragmentHome_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/slector_homefragment_min"/>

            <EditText
                android:id="@+id/edit_fragmentHome_money"
                android:layout_width="195dp"
                android:layout_height="50dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:hint="元/月"/>

            <ImageButton
                android:id="@+id/imgBtn_fragmentHome_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:src="@drawable/slector_homefragment_add"/>
            
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

    </RelativeLayout>


</LinearLayout>
