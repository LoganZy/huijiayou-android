<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/rl_dialogVersionUpdate_view"
        android:layout_width="275dp"
        android:background="@drawable/shape_dialogversionupdate"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_below="@+id/imgView_dialogVersionUpdate_img"
        android:layout_marginTop="-30dp"
        android:paddingTop="35dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dialogVersionUpdate_newVersionTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发现新版本"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:textColor="#F95B4E"/>

            <TextView
                android:id="@+id/tv_dialogVersionUpdat_newVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="V 1.1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textColor="#F95B4E"
                android:layout_toRightOf="@+id/tv_dialogVersionUpdate_newVersionTag"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialogVersionUpdate_currentVersion"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="11dp"
                android:textColor="#F95B4E"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="当前版本: "/>

            <TextView
                android:id="@+id/tv_dialogVersionUpdate_appSize"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="11dp"
                android:layout_height="wrap_content"
                android:textColor="#F95B4E"
                android:gravity="center"
                android:text="应用大小: "/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_dialogVersionUpdate_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/textColor_51586A"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialogVersionUpdate_noUpdate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#F95B4E"
                android:background="@drawable/shape_dialogversionupdate_btnnoupdate"
                android:textSize="18dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="match_parent"
                android:text="暂不更新"/>

            <Button
                android:id="@+id/btn_dialogVersionUpdate_update"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape_dialogversionupdate_btnupdate"
                android:textSize="18dp"
                android:layout_height="match_parent"
                android:text="立即更新"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView_dialogVersionUpdate_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:src="@mipmap/ic_home_new_version"/>

</RelativeLayout>
