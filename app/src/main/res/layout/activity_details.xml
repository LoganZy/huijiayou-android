<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.huijiayou.huijiayou.activity.DetailsActivity">
    <include layout="@layout/common_title"/>
    <TextView
        android:background="@mipmap/ic_details_background"
        android:paddingTop="8dp"
        android:gravity="center"
        android:drawableTop="@mipmap/ic_details_gas_h"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:text="支付完成"
        android:textSize="16dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/img_activityDetail_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@mipmap/ic_details_cnpc" />
        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_activityDetail_cardNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01000000000000000"
                android:textColor="#666666"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/tv_activityDetail_username"
                android:textSize="14dp"
                android:textColor="#666666"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小明"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_activityDetail_productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="中石化6月加油套餐"
                android:textColor="#666666"
                android:textSize="14dp" />
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_pay_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_activityDetail_process"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@mipmap/ic_recording_green"
                    android:paddingLeft="30dp"
                    android:paddingTop="3dp"
                    android:text="3/6"
                    android:textColor="#6DC152"/>
                <LinearLayout
                    android:id="@+id/ll_activityDetail_titlepay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textColor="#666666"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="13dp"
                        android:text="充值金额" />
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/ic_details_recharge"
                        />
                    <TextView
                        android:id="@+id/tv_activityDetail_befor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="3000"
                        android:textColor="#2A2A2A"
                        android:textSize="17dp" />

                    <TextView
                        android:textColor="#666666"
                        android:textSize="13dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="实际支付" />
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@mipmap/ic_details_recharge"
                        />
                    <TextView
                        android:id="@+id/tv_activityDetail_after"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="3000"
                        android:textColor="#2A2A2A"
                        android:textSize="17dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_details_recharge"/>
                        <TextView
                            android:textColor="#666666"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值金额"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_details_time"/>
                        <TextView
                            android:textColor="#666666"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到账时间"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/ic_details_state"/>
                        <TextView
                            android:textColor="#666666"
                            android:textSize="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="充值状态"
                            />
                    </LinearLayout>
                </LinearLayout>
<!--                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </ListView>-->
                <com.huijiayou.huijiayou.widget.SVListView
                    android:id="@+id/myLv_activityDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                </com.huijiayou.huijiayou.widget.SVListView>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="#F5F5F5"
                android:layout_width="match_parent"
                android:layout_height="2dp" />
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#999999"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号"/>

                <TextView
                    android:id="@+id/tv_activityDetail_orderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="12222222222"
                    android:textColor="#999999"
                    android:textSize="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#999999"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下单时间"/>

                <TextView
                    android:id="@+id/tv_activityDetail_ictime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="2018-06-12"
                    android:textColor="#999999"
                    android:textSize="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#999999"
                    android:textSize="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="成交时间"/>

                <TextView
                    android:id="@+id/tv_activityDetail_recharge_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="2018-06-12"
                    android:textColor="#999999"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>