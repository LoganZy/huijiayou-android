<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_wxbind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wanglibao.huijiayou.activity.WXBindActivity">

    <include layout="@layout/common_title"/>

    <ImageView
        android:id="@+id/img_activity_wxbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@mipmap/ic_login_default_avatar"/>
    <TextView
        android:id="@+id/tv_activity_wxbind_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/img_activity_wxbind"
        android:layout_centerHorizontal="true"
        android:text="昵称"/>
    <TextView
        android:id="@+id/tv_activity_wxbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_wxbind_name"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="账号绑定，即可通过微信快速登录"/>

    <LinearLayout
        android:id="@+id/ll_activity_wxbind_phone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_activity_wxbind"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_login_account"/>
        <EditText
            android:id="@+id/edit_activity_bind_phone"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/line_login_selector"
            android:hint="请输入手机号码"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_activity_wxbind_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ll_activity_wxbind_phone"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_login_password"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/edit_activity_bind_sms"
                android:layout_height="wrap_content"
                android:background="@drawable/line_login_selector"
                android:hint="请输入手机验证码"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"/>
            <TextView
                android:id="@+id/tv_activity_wxbind_sendPhoneCode"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textColor="#F3B93E"
                android:text="获取验证码"
                />

        </RelativeLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_activity_wxbind_invit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:layout_below="@id/ll_activity_wxbind_sms"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_login_invitation"/>
        <EditText
            android:id="@+id/edit_activity_bind_invit"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/line_login_selector"
            android:hint="若无邀请码请忽略"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_activity_wxbind_Bind"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_activity_wxbind_invit"
        android:background="@drawable/round_button"
        android:textColor="@color/white"
        android:text="确定绑定"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_weixin"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ic_login_pattern"
        android:padding="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@mipmap/ic_login_check"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册登录表示您已同意"/>

        <TextView
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openAgreement"
            android:text="《会加油注册协议》"/>

    </LinearLayout>

</RelativeLayout>
